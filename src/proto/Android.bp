package {
    // See: http://go/android-license-faq
    // A large-scale-change added 'default_applicable_licenses' to import
    // all of the 'license_kinds' from "tools_netsim_license"
    // to get the below license kinds:
    //   SPDX-license-identifier-Apache-2.0
    default_applicable_licenses: ["tools_netsim_license"],
}

cc_library {
    name: "netsim-proto",
    host_supported: true,
    proto: {
        export_proto_headers: true,
        type: "full",
        canonical_path_from_root: false,
        include_dirs: ["external/protobuf/src"],
    },
    srcs: [
        "frontend.proto",
        "internal.proto",
        "model.proto",
        "startup.proto",
	"hci_packet.proto"
    ],
}

genrule {
    name: "FrontendStub_h",
    tools: [
        "aprotoc",
        "protoc-gen-grpc-cpp-plugin",
    ],
    cmd: "$(location aprotoc) -Itools/netsim/src/proto -Iexternal/protobuf/src --plugin=protoc-gen-grpc=$(location protoc-gen-grpc-cpp-plugin) $(in) --grpc_out=$(genDir) --cpp_out=$(genDir)",
    srcs: [
        "frontend.proto",
    ],
    out: [
        "frontend.grpc.pb.h",
        "frontend.pb.h",
    ],
}

genrule {
    name: "FrontendStub_cc",
    tools: [
        "aprotoc",
        "protoc-gen-grpc-cpp-plugin",
    ],
    cmd: "$(location aprotoc) -Itools/netsim/src/proto -Iexternal/protobuf/src --plugin=protoc-gen-grpc=$(location protoc-gen-grpc-cpp-plugin) $(in) --grpc_out=$(genDir) --cpp_out=$(genDir)",
    srcs: [
        "frontend.proto",
    ],
    out: [
        "frontend.grpc.pb.cc",
        "frontend.pb.cc",
    ],
}
