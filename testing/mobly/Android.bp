python_test_host {
    name: "ble-gatt-test",
    srcs: [
        "ble_gatt_test.py",
        "ble_utils.py",
    ],
    main: "ble_gatt_test.py",
    libs: ["mobly"],
    device_common_data: [
        // test APK module
        ":mobly-bundled-snippets",
